@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model?.Value("pageTitle") ?? null;
	var backgroundImage = Model?.Value<IPublishedContent>("heroBackgroundImage")?.Url() ?? "";
	var signatureImage = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";
	var logoImage = Model?.Value<IPublishedContent>("headerOnatrixLogo")?.Url() ?? "";
}

<!--Header section-->
<section class="header">
	<div class="container">
		<div class="address-socialmedia">
			<div class="address">
				<p class="address-ingress">@Model?.Value("headerAddress")</p>
			</div>
			<div class="socialmedia">
				<a class="meta"><i class="fa-brands fa-facebook-f"></i></a>
				<a class="x"><i class="fa-brands fa-x-twitter"></i></a>
				<a class="linkedIn"><i class="fa-brands fa-linkedin-in"></i></a>
			</div>
		</div>
		<div class="navigation-bar">
			<img class="onatrix-logo" alt="" src="@logoImage" />
			<div class="site-navigation">
				<a href="@Model?.Value("headerAboutSiteUrl")">@Model?.Value("headerAboutSite")</a>
				<a href="@Model?.Value("headerServicesSiteUrl")">@Model?.Value("headerServicesSite")</a>
				<a href ="@Model?.Value("headerProjectsSiteUrl")"> @Model?.Value("headerProjectsSite")</a>
				<a href="@Model?.Value("headerContactSiteUrl")">@Model?.Value("headerContactSite")</a>
			</div>
			<i class="fa-solid fa-magnifying-glass"></i>
		</div>
	</div>
</section>



<section id="hero-slider" class="hero">
	<!--<div class="background" style="background-image:url(@backgroundImage); background-size: cover; background-position: 60%"></div>-->
	<img class="background" src="@backgroundImage" alt="@Model?.Value("heroBackgroundImage")" />
	<div class="container">
		<div class="hero-content">
			<h1 class="hero-headline">@Model?.Value("heroHeadline")</h1><!--Message for MY: I changed headline to "hero-headline"-->
			<p class="ingress">@Model?.Value("heroText")</p>
			<div>
				<a href="@Model?.Value("heroButtonUrl")" class="btn btn-primary">@Model?.Value("heroButtonText")</a>
			</div>
		</div>
	</div>
</section>


<!--About us section-->
<section class="about-us">
	<div class="container">
		<div class="content">
			<div class="about-us-headline">
				<h5>@Model?.Value("aboutSectionTitle")</h5>
				<h2>@Model?.Value("aboutHeadline")</h2>
			</div>
			    <blockquote class="quote">
        			@Html.Raw(Model?.Value<string>("aboutQuote")?.Replace("financial", "financial<br>"))
    			</blockquote>
			<p>@Html.Raw(Model?.Value<string>("aboutText")?
				.Replace("sint", "sint<br>")
				.Replace("laborum.", "laborum.<br>"))
				</p>
			<div class="signature-container">
				<div class="signature">
					<img class="signature-image" src="@signatureImage" alt="@Model?.Value("aboutSignature")" />
					<div class="clarification">
						<p class="name">@Model?.Value("aboutSignature")</p>
					</div>
				</div>
			</div>

			<div class="form-container">
			</div>
		</div>
	</div>
</section>


<!--Our services section-->
<section class="our-services">
	<div class="container">
		<div class="our-services-content">
			<h5>
				@Model?.Value("ourServicesTitle")
			</h5> 
			<h2>
					@Html.Raw(Model?.Value<string>("ourServicesHeadline")?.Replace("Solutions", "Solutions<br>"))
			</h2>
		</div>

	</div>
</section>

<!--Trusted section-->
<section class="trusted">
	<div class="container">
		<div class="trusted-content">
			<h5>@Model?.Value("trustedText")</h5>
			<h2>@Model?.Value("trustedHeadline")</h2>
		</div>
		<div>
			<a href="@Model.Value("trustedButtonUrl") class="btn">@Model.Value("trustedButtonText")</a>
		</div>
	</div>
</section>



<!--Success story section-->
<section class="success-story">
	<div class="container">
		<div class="success-story-headline">
			<h5></h5>
			<h2></h2>
		</div>
		<div class="success-story-numbers-div">
			<div class="numbers-left">
				<p></p>
			</div>
			<div class="numbers-middle">
				<p></p>
			</div>
			<div class="numbers-right">
				<p></p>
			</div>
		</div>
		<img /> <!--video, how do we do here?-->
		<img class="military-green-background" />
		<img class="worldMap" />
	</div>
</section>


<!--Recent projects section-->
<section class="recent-projects">
	<div class="container">
		<div class="recent-projects-headline">
			<h5></h5>
			<h2></h2>
		</div>
		<div class="4-images-div">
			<div class="image-1">
				<img />
				<p></p>
			</div>
			<div class="image-2">
				<img />
				<p></p>
			</div>
			<div class="image-3">
				<img />
				<p></p>
			</div>
			<div class="image-4">
				<img />
				<p></p>
			</div>
		</div>
		<img class="partners" />
	</div>
</section>